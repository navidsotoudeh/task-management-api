<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Tasks</h1>
            <a href="/tasks/create" class="btn btn-primary">
                <i class="fas fa-plus"></i> New Task
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="task-list">
            {{#each tasks}}
            <div class="task-item" id="task-{{this.id}}">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">{{this.title}}</h5>
                        <p class="text-muted mb-2">{{this.description}}</p>
                        <span id="status-badge-{{this.id}}" class="badge badge-{{this.status}}">
                            {{this.status}}
                        </span>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="form-check form-switch me-3">
                            <input class="form-check-input task-status-toggle" type="checkbox" 
                                   data-task-id="{{this.id}}" 
                                   {{#if (eq this.status 'completed')}}checked{{/if}}>
                        </div>
                        <a href="/tasks/{{this.id}}/edit" class="btn btn-sm btn-outline-primary me-2">
                            <i class="fas fa-edit"></i>
                        </a>
                        <button onclick="confirmDelete('{{this.id}}')" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="text-center py-5">
                <i class="fas fa-tasks fa-3x text-muted mb-3"></i>
                <h3>No tasks yet</h3>
                <p class="text-muted">Create your first task to get started!</p>
                <a href="/tasks/create" class="btn btn-primary mt-3">
                    <i class="fas fa-plus"></i> Create Task
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</div> 